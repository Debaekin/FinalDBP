@model IEnumerable<Web_Kinti.Models.Rol>
<html>
<head>
    <link rel="stylesheet" href="~/css/EstiloListarRe.css">

    <link rel="stylesheet"
          href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body>

    <header>
        <a href="#" class="logo">KIN<span>TI</span></a>

        <ul class="navbar">
            <li><a href="listarusu">Usuarios registrados</a></li>
            <li><a href="registrarro">Registrar rol</a></li>
            <li><a href="Listarpro">Menú</a></li>
        </ul>

        <div class="h-right">
            <a href="#">Siguenos</a>
            <a href="#"><i class="ri-instagram-fill"></i></a>
            <a href="#"><i class="ri-twitter-fill"></i></a>
            <a href="#"><i class="ri-facebook-fill"></i></a>
            <div class="bx bx-menu" id="menu-icon"></div>
        </div>
    </header>

    <div class="table">

        <div class="table_section">
            <table>
                <thead>
                    <tr>
                        <th scope="col">Codigo</th>
                        <th scope="col">Nombre de Rol</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdRol</td>
                            <td>@item.Nombre</td>
                            <td>
                                <a asp-action="Editro" asp-route-id="@item.IdRol">
                                    <button class="update-button"><i class='bx bxs-edit'></i></button>
                                </a>
                                <a asp-action="Deletero" asp-route-id="@item.IdRol">
                                    <button class="delete-button"><i class='bx bxs-trash-alt'></i></button>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>