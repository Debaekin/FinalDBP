@model Web_Kinti.Models.Reservacion

<html>
<head>
    <link rel="stylesheet" href="~/css/EstiloFormulario.css">
</head>

<body>
    <form class="formulario" asp-controller="Admin" asp-action="Registrore" method="post">
        <h1>Registrar Reserva</h1>

        <div class="container">


            <div class="input-container">
                <input asp-for="IdReservacion" class="form-control" id="formGroupExampleInput2" placeholder="Id">
                <span asp-validation-for="IdReservacion" class="text-danger"></span>
            </div>

            <div class="input-container">
                <input asp-for="Fecha" class="form-control" id="formGroupExampleInput2" placeholder="Fecha">
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="select">
                <select asp-for="IdUsuario" asp-items='@(new SelectList(ViewBag.ListaDeUsuarios, "IdUsuario", "Nombre"))' class="form-control">
                    <option selected disabled>Usuario</option>
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>


            <input type="submit" value="Registrar" class="button" />

        </div>
    </form>

</body>
</html>